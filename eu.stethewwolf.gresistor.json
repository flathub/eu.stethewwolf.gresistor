{
    "app-id": "eu.stethewwolf.gresistor",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "command": "gresistor3",
    "rename-desktop-file": "gresistor.desktop",
	"rename-icon": "gresistor",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "modules": [
        {
            "name": "gresistor",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix=${FLATPAK_DEST}",
                "install -Dm644 gresistor.desktop  -t ${FLATPAK_DEST}/share/applications",
                "install -Dm644 gresistor3/pixmaps/48/gresistor.png  -t ${FLATPAK_DEST}/share/icons/hicolor/48/apps/",
                "install -Dm644 gresistor3/pixmaps/128/gresistor.png  -t ${FLATPAK_DEST}/share/icons/hicolor/128/apps/"
            ],
            "sources": [
                {
                    "type": "git",
                    "url" : "https://github.com/stethewwolf/gResistor.git",
                    "tag" : "3.2.3",
                    "commit": "d03302ca277f940cd49d65a928ac23b888a8fa44"
                }
            ]
        }
    ]
}
