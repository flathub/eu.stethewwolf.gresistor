{
    "app-id": "eu.stethewwolf.gresistor",
    "runtime": "org.gnome.Platform",
    "runtime-version": "41",
    "sdk": "org.gnome.Sdk",
    "command": "gresistor3",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=x11"
    ],
    "modules": [
        {
            "name": "gresistor",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix=${FLATPAK_DEST}",
                "install -Dm644 gresistor.desktop  -t ${FLATPAK_DEST}/share/applications",
                "install -Dm644 gresistor3/pixmaps/gresistor.png  -t ${FLATPAK_DEST}/share/icons"
            ],
            "sources": [
                {
                    "type": "git",
                    "url" : "https://github.com/stethewwolf/gResistor.git",
                    "tag" : "3.2.2",
                    "commit": "74cc99386439b906c4af6ddd50554cc60cd76d4c"
            ]
        }
    ]
}
