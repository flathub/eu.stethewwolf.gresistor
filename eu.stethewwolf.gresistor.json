{
    "app-id": "eu.stethewwolf.gresistor",
    "runtime": "org.gnome.Platform",
    "runtime-version": "41",
    "sdk": "org.gnome.Sdk",
    "command": "gresistor3",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "modules": [
        {
            "name": "gresistor",
            "buildsystem": "simple",
            "build-commands": [
                "python3 setup.py install --prefix=${FLATPAK_DEST}"
            ],
            "sources": [
                {
                    "type": "git",
                    "url" : "https://github.com/stethewwolf/gResistor.git",
                    "tag" : "3.2.2"
                }
            ]
        }
    ]
}
